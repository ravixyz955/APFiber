<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context="com.example.user.apfiber.SurveySelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/survey_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadowfile"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/survey_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/instal_commision_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadowfile"
            android:elevation="8dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/ins_commission_txt"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.example.user.apfiber.widget.ImagePickerView
            android:id="@+id/pole_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
